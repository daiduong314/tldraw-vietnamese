{
  "extends": "../../tsconfig.base.json",
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "rootDir": "src",
    "emitDeclarationOnly": false,
    "experimentalDecorators": true,
    "useDefineForClassFields": true,
    "skipLibCheck": true,
    "paths": {
      "*": ["src/*"]
    }
  },
  "references": [{ "path": "../../packages/core" }]
}
